<% flash.each do |type, text| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="flash alert alert-<%="#{type}"%> alert-dismissable">
        <button type="button"
                class="close"
                data-dismiss="alert"
                aria-hidden="true">
          &times;
        </button>
        <p><%= text %></p>
      </div>
    </div>
  </div>
<% end %>
