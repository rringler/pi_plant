<% if @plants.any? %>
  <%= render partial: 'plants/plant', collection: @plants %>
<% else %>
  <div class="row">
    <div class="col-xs-6">
      <h3>No plants are currently being monitored.</h3>
    </div>
  </div>
<% end %>

<hr />

<%= link_to 'Create new plant', new_plant_path, id: "new_plant_link",
                                                class: 'btn btn-primary',
                                                remote: true %>

<div id="new_plant_form"></div>
